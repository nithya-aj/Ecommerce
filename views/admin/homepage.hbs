                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="header-title pb-3 mt-0">Sales Report</h5>
                                    <div class="table-responsive">
                                        <table id="example" class="table table-striped table-bordered table-sm"
                                            cellspacing="0" width="100%">
                                            <thead>
                                                <tr class="align-self-center">
                                                    <th>Day</th>
                                                    <th>Month</th>
                                                    <th>Year</th>
                                                    <th>Product Name</th>
                                                    <th>Price</th>
                                                    <th>quantity</th>
                                                    <th>Total Amount</th>
                                                    {{!-- <th>Transaction</th> --}}
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each data}}
                                                <tr>
                                                    <td>{{this._id.day}}</td>
                                                    <td>{{this._id.month}}</td>
                                                    <td>{{this._id.year}}</td>
                                                    <td>{{this._id.product}}</td>
                                                    <td>Rs.{{this._id.price}}</td>
                                                    <td>{{this.quantity}}</td>
                                                    <td>Rs.{{this.total}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <script>
                        $(document).ready(function () {
                            $('#example').DataTable();
