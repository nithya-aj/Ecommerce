<div class="container-fluid page-body-wrapper" style="margin-top: 64px;">
    <!-- partial:partials/_sidebar.html -->

    {{>admin-sidebar}}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Basic tables</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-lg-12 stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">All Users</h4>
                            <div class="template-demo" style="margin-left: 86%;">
                                <div>
                                    <a href="/admin/add-user" class="btn btn-dark btn-rounded btn-fw mb-5 ">Add User</a>
                                </div>
                            </div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> No </th>
                                        <th>First Name</th>
                                        <th> Last Name </th>
                                        <th> Email Id </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each usersData}}
                                    <tr class="table-warning">
                                        <td>{{@index}}</td>
                                        <td>{{this.firstName}}</td>
                                        <td> {{this.lastName}} </td>
                                        <td> {{this.email}} </td>
                                        {{#if this.userStatus}}
                                        <td><a href="/admin/block-user/{{this._id}}"><button type="button"
                                                    class="btn btn-outline-primary btn-sm"
                                                    onclick="return confirm('Are you want to block {{this.name}}')">
                                                    Block</button></a></td>
                                        {{else}}<td><a href="/admin/unblock-user/{{this._id}}"><button type="button"
                                                    class="btn btn-outline-primary btn-sm">
                                                    Unblock</button></a></td>
                                        {{/if}}
                                        <td><a href="/admin/delete-user/{{this._id}}"><button type="button"
                                                    class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Are you want to delete {{this.name}}')">
                                                    Delete</button></a></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        {{>admin-footer}}
        <!-- partial -->
    </div>