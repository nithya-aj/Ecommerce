<div class="container-fluid page-body-wrapper">
    <!-- partial:partials/_sidebar.html -->

    {{>admin-sidebar}}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit User</h4>
                        <form action="/admin/add-user/{{userInfo._id}}" method="post" class="forms-sample"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputName1">First Name</label>
                                <input name="firstName" value="{{userInfo.firstName}}" type="text" class="form-control" id="exampleInputName1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Last Name</label>
                                <input name="lastName" value="{{userInfo.lastName}}" class="form-control" id="exampleInputEmail3">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Phone NUmber</label>
                                <input name="phoneNumber" value="{{userInfo.phoneNumber}}" class="form-control" id="exampleInputEmail3">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword4">Email</label>
                                <input name="email" value="{{userInfo.email}}" type="text" class="form-control" id="exampleInputPassword4">
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Update User</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        {{>admin-footer}}
        <!-- partial -->
    </div>