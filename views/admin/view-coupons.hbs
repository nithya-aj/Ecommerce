<div class="container-fluid page-body-wrapper" style="margin-top: 64px;">
    <!-- partial:partials/_sidebar.html -->

    {{>admin-sidebar}}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Basic tables</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-lg-12 stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Coupons</h4>
                            <div class="template-demo" style="margin-left: 86%;">
                                <div>
                                    <a href="/admin/add-coupon" class="btn btn-dark btn-rounded btn-fw mb-5 ">Add Coupon</a>
                                </div>
                            </div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> No </th>
                                        <th>Coupon Name</th>
                                        <th> Discound Price </th>
                                        <th> Valid From </th>
                                        <th> Valid To </th>
                                        <th> Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each coupons}}
                                    <tr class="table-warning">
                                        <td>{{inc @index}}</td>
                                        <td>{{this.couponName}}</td>
                                        <td>{{this.discoundPrice}}</td>
                                        <td> {{this.validFrom}} </td>
                                        <td> {{this.validTo}} </td>
                                        
                                        <td><a href="/admin/delete-coupon/{{this._id}}"><button type="button"
                                                    class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Are you want to delete {{this.couponName}} coupon?')">
                                                    Delete</button></a></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        {{>admin-footer}}
        <!-- partial -->
    </div>