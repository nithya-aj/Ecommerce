<div class="container-fluid page-body-wrapper">
    <!-- partial:partials/_sidebar.html -->

    {{>admin-sidebar}}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add product</h4>
                        <form action="/admin/add-product" method="post" class="forms-sample"
                            enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputName1">Badge</label>
                                <input name="badge" type="text" class="form-control" id="exampleInputName1">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Category</label>
                                <select name="category" class="form-select" aria-label="Default select example">
                                    <option value="1">select category</option>
                                    {{#each category}}
                                    <option >{{this.cat_name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword4">Name</label>
                                <input name="name" type="text" class="form-control" id="exampleInputPassword4" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword4">Descritption</label>
                                <input name="description" type="text" class="form-control" id="exampleInputPassword4"
                                    required>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Price</label>
                                    <input name="price" type="text" class="form-control" id="exampleInputCity1"
                                        required>
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Real Price</label>
                                    <input name="realPrice" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>File upload</label>
                                {{!-- <input type="file" name="images" class="file-upload-default" multiple> --}}
                                <div class="input-group col-xs-12">
                                    <input name="images" type="file" class="form-control file-upload-info"
                                        placeholder="Upload Image" required multiple>
                                        
                                </div>
                            </div>
                            <hr>
                            <h4 class="card-title">Product Details </h4>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Brand</label>
                                    <input name="brand" type="text" class="form-control" id="exampleInputCity1"
                                        required>
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Collection</label>
                                    <input name="collection" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Function</label>
                                    <input name="function" type="text" class="form-control" id="exampleInputCity1"
                                        required>
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Movement</label>
                                    <input name="movement" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Warrenty</label>
                                    <input name="warrenty" type="text" class="form-control" id="exampleInputCity1"
                                        required>
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Water Resistance</label>
                                    <input name="waterResistance" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Dial Colour</label>
                                    <input name="dialColour" type="text" class="form-control" id="exampleInputCity1"
                                        >
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Dial Shape</label>
                                    <input name="dialShape" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Case Material</label>
                                    <input name="caseMaterial" type="text" class="form-control" id="exampleInputCity1"
                                        required>
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Case Thickness</label>
                                    <input name="caseThickness" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Strap Colour</label>
                                    <input name="strapColour" type="text" class="form-control" id="exampleInputCity1"
                                        required>
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Strap Material</label>
                                    <input name="strapMaterial" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col">
                                    <label for="exampleInputCity1">Glass material</label>
                                    <input name="glassMaterial" type="text" class="form-control" id="exampleInputCity1"
                                        required>
                                </div>
                                <div class="col">
                                    <label for="exampleInputCity1">Lock mechanism</label>
                                    <input name="lockMechanism" type="text" class="form-control" id="exampleInputCity1">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Add Product</button>
                            <button type="reset" class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        {{>admin-footer}}
        <!-- partial -->
    </div>