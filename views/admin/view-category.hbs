<div class="container-fluid page-body-wrapper" style="margin-top: 64px;">
    <!-- partial:partials/_sidebar.html -->

    {{>admin-sidebar}}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">All Categories</h4>
                            <div class="template-demo" style="margin-left: 86%;">
                                <div>
                                <a href="/admin/add-category" class="btn btn-dark btn-rounded btn-fw mb-5 " >Add Category</a>
                                </div>
                            </div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> No </th>
                                        <th> Category </th>
                                        <th> Description </th>
                                        <th>Image</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each category}}
                                    <tr class="table-warning">
                                        <td>{{inc @index}}</td>
                                        <td> {{this.cat_name}} </td>
                                        <td> {{this.cat_desc}} </td>
                                        <td><img src="/assets/images/products/{{this._id}}.jpg" alt=""></td>
                                        <td><a href="/admin/edit-category/{{this._id}}"><button type="button" class="btn btn-outline-primary btn-sm">Edit</button></a></td>
                                        <td><a href="/admin/delete-category/{{this._id}}"><button type="button" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you want to delete {{this.name}}')">
                                            Delete</button></a></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        {{>admin-footer}}
        <!-- partial -->
    </div>