<div class="container-fluid page-body-wrapper">
    <!-- partial:partials/_sidebar.html -->

    {{>admin-sidebar}}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">All Products</h4>
                            <div class="template-demo" style="margin-left: 86%;">
                                <div>
                                    <a href="/admin/add-product" class="btn btn-dark btn-rounded btn-fw mb-5 ">Add
                                        Product</a>
                                </div>
                            </div>
                            <table class="table table-bordered" id="productsTable">
                                <thead>
                                    <tr>
                                        <th> No </th>
                                        <th>badge</th>
                                        <th> Category </th>
                                        <th> Name </th>
                                        {{!-- <th> Descritption </th --}} <th> Price </th>
                                        <th> Real Price </th>
                                        <th>Image</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each products}}
                                    <tr class="table-warning">
                                        <td>{{inc @index}}</td>
                                        <td>{{this.badge}}</td>
                                        <td> {{this.category}} </td>
                                        <td> {{this.name}} </td>
                                        {{!-- <td>{{this.name}} </td> --}}
                                        <td> Rs.{{this.price}}</td>
                                        {{#if realPrice}}
                                        <td>Rs.{{this.realPrice}}</td>
                                        {{else}}
                                        <td>{{this.realPrice}}</td>
                                        {{/if}}

                                        <td><img src="/assets/images/products/{{this.images.[0]}}" alt=""></td>
                                        <td><a href="/admin/edit-product/{{this._id}}"><button type="button"
                                                    class="btn btn-outline-primary btn-sm">Edit</button></a></td>
                                        <td><a href="/admin/delete-product/{{this._id}}"><button type="button"
                                                    class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Are you want to delete {{this.name}}')">
                                                    Delete</button></a></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        {{>admin-footer}}
        <!-- partial -->
    </div>

    <script>

        $(document).ready(function () {
            $('#productsTable').DataTable();
        });

    </script>